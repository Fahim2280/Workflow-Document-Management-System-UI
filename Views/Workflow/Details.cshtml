@model Workflow_Document_Management_System_UI.DTOs.WorkflowDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-diagram-3"></i> @Model.WorkflowName</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Workflows</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.WorkflowName</li>
            </ol>
        </nav>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.WorkflowId" class="btn btn-outline-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Workflow Information -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle"></i> Workflow Information
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.WorkflowName</dd>

                            <dt class="col-sm-4">Type:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.WorkflowType == "Order" ? "primary" : "info")">
                                    @Model.WorkflowType
                                </span>
                            </dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                                    <i class="bi bi-@(Model.IsActive ? "check-circle" : "x-circle")"></i>
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy 'at' HH:mm")</dd>

                            <dt class="col-sm-4">Workflow ID:</dt>
                            <dd class="col-sm-8"><code>@Model.WorkflowId</code></dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr>
                    <h6>Description:</h6>
                    <p class="text-muted">@Model.Description</p>
                }
            </div>
        </div>

        <!-- Documents Section (Placeholder for future implementation) -->
        <div class="card mt-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-file-earmark-text"></i> Associated Documents</span>
                <button class="btn btn-sm btn-primary">
                    <i class="bi bi-plus"></i> Add Document
                </button>
            </div>
            <div class="card-body">
                <div class="text-center py-4">
                    <i class="bi bi-file-earmark display-4 text-muted"></i>
                    <h6 class="mt-3">No documents yet</h6>
                    <p class="text-muted mb-0">Documents will appear here when added to this workflow.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Assigned Admins -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-people"></i> Assigned Administrators (@Model.AssignedAdmins.Count)
            </div>
            <div class="card-body">
                @if (Model.AssignedAdmins.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var admin in Model.AssignedAdmins)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">
                                        <i class="bi bi-person-circle"></i> @admin.Username
                                    </h6>
                                    <small class="text-muted">@admin.AssignedDate.ToString("MMM dd")</small>
                                </div>
                                <p class="mb-1 text-muted small">@admin.Email</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="bi bi-person-x display-6 text-muted"></i>
                        <p class="mt-2 mb-0 text-muted">No administrators assigned</p>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mt-4">
            <div class="card-header">
                <i class="bi bi-lightning"></i> Quick Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-bar-chart"></i> View Analytics
                    </button>
                    <button class="btn btn-outline-info btn-sm">
                        <i class="bi bi-download"></i> Export Data
                    </button>
                    <button class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-archive"></i> Archive Workflow
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
