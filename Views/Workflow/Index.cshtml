@model Workflow_Document_Management_System_UI.DTOs.WorkflowListViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-diagram-3"></i> Workflows</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Workflow
    </a>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-funnel"></i> Filters
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="searchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                       value="@Model.SearchTerm" placeholder="Search workflows...">
            </div>
            <div class="col-md-3">
                <label for="filterType" class="form-label">Type</label>
                <select class="form-select" id="filterType" name="filterType">
                    <option value="">All Types</option>
                    <option value="Order" selected="@(Model.FilterType == "Order")">Order</option>
                    <option value="Pool" selected="@(Model.FilterType == "Pool")">Pool</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterActive" class="form-label">Status</label>
                <select class="form-select" id="filterActive" name="filterActive">
                    <option value="true" selected="@(Model.FilterActive)">Active</option>
                    <option value="false" selected="@(!Model.FilterActive)">Inactive</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-search"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Workflows Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-table"></i> Workflow List (@Model.Workflows.Count)</span>
        <div>
            <a asp-action="Analytics" class="btn btn-sm btn-outline-info">
                <i class="bi bi-bar-chart"></i> Analytics
            </a>
            <a asp-action="AdminWorkload" class="btn btn-sm btn-outline-warning">
                <i class="bi bi-person-workspace"></i> Workload
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Workflows.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Created By</th>
                            <th>Created Date</th>
                            <th>Assigned Admins</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var workflow in Model.Workflows)
                        {
                            <tr>
                                <td>
                                    <strong>@workflow.WorkflowName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-@(workflow.WorkflowType == "Order" ? "primary" : "info")">
                                        @workflow.WorkflowType
                                    </span>
                                </td>
                                <td>
                                    @(string.IsNullOrEmpty(workflow.Description) ? "No description" : workflow.Description)
                                </td>
                                <td>@workflow.CreatedByUsername</td>
                                <td>@workflow.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(workflow.AssignedAdmins))
                                    {
                                        <span class="badge bg-secondary">@workflow.AssignedAdmins</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No admins assigned</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(workflow.IsActive ? "success" : "danger")">
                                        <i class="bi bi-@(workflow.IsActive ? "check-circle" : "x-circle")"></i>
                                        @(workflow.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@workflow.WorkflowId"
                                           class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@workflow.WorkflowId"
                                           class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">No workflows found</h4>
                <p class="text-muted">Create your first workflow to get started.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create Workflow
                </a>
            </div>
        }
    </div>
</div>